@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "CategoryEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    @Html.HiddenFor(x => x.CategoryID)

    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br />
    @Html.Label("Kategori Açıklama")
    @Html.TextBoxFor(x => x.CategoryExplation, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryExplation)

    <br />
    <button class="btn btn-info" type="submit" style="float:right">Kaydet</button>
</form>

