@model IEnumerable<EntityLayer.Concrete.Category>

@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = "";}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Projects</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Kategori Adı

                            </th>

                            <th style="width: 20%">

                                Son Blog

                            </th>

                            <th style="width: 15%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.CategoryStatus == true)
                            {
                                color = "post-category text-white bg-success mb-3";
                            }
                            if (item.CategoryStatus == false)
                            {
                                color = "post-category text-white bg-danger mb-3";
                            }


                            <tr>

                                <td>

                                    @item.CategoryID

                                </td>

                                <td>
                                    <b>  @item.CategoryName</b>

                                </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar2.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar3.png">

                                        </li>

                                    </ul>

                                </td>

                                <td class="project-state">

                                    <span class="badge badge-@color">@item.CategoryStatus</span>

                                </td>

                                <td class="project-actions text-right">


                                    <a class="btn btn-info" href="/Category/CategoryEdit/@item.CategoryID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger " href="/Category/CategoryDelete/@item.CategoryID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Pasif

                                    </a>

                                    <a class="btn btn-outline-success " href="/Category/CategoryStatusTrue/@item.CategoryID">

                                        <i class="fas fa-atom">

                                        </i>
                                        Aktif Yap
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
        Yeni Katagori Ekle
    </button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Yeni Kategori Ekleme Paneli</h2>
                </div>
                <form method="post" action="/Category/AdminCategoryAdd/">
                    <div class="modal-body">
                        <label>Kategori Adı</label>
                        <input type="text" name="CategoryName" class="form-control" />
                        <br />
                        <label>Kategori Açıklaması</label>
                        <input type="text" name="CategoryExplation" class="form-control" />
                        <br />
                        <button class="btn btn-primary">Kaydet</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>

</html>