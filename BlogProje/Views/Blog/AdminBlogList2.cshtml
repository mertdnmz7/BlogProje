@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string color = "";}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 30%">

                                Blog Başlığı

                            </th>

                            <th style="width: 20%">

                                Yazar

                            </th>

                            <th style="width: 5%">


                            </th>

                            <th style="width: 10%" class="text-center">

                                Kategori

                            </th>

                            <th style="width: 25%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Seyahat")
                            {
                                color = "post-category text-white bg-warning mb-3";
                            }
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "post-category text-white bg-primary mb-3";
                            }
                            if (item.Category.CategoryName == "Teknoloji")
                            {
                                color = "post-category text-white bg-secondary  mb-3";
                            }
                            if (item.Category.CategoryName == "Spor")
                            {
                                color = "post-category text-white bg-danger mb-3";
                            }
                            if (item.Category.CategoryName == "Film & Dizi")
                            {
                                color = "post-category text-white bg-success mb-3";
                            }
                            if (item.Category.CategoryName == "Kültür & Sanat")
                            {
                                color = "post-category text-white bg-info mb-3";
                            }
                            <tr>

                                <td>

                                    @item.BlogID

                                </td>

                                <td>
                                    <b>  @item.BlogTitle</b>

                                </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt=" " class="table-avatar" src="@item.Author.AuthorImage ">
                                            &<b> @item.Author.AuthorName</b>
                                        </li>


                                    </ul>

                                </td>

                                <td class="project_progress">
                                </td>

                                <td class="project-state">

                                    <span class="badge badge-@color">@item.Category.CategoryName</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogID">

                                        <i class="fas fa-folder">

                                        </i>

                                        Sitede Gör

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>
